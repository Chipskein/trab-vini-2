<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Publish Pin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-gray-100 flex items-center justify-center p-6">
  <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-center text-gray-800">Publish a New Pin</h2>

    <form class="mt-6 space-y-5" enctype="multipart/form-data" method="post" action="/api/posts">
      <!-- Upload -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Upload Image</label>
        <input id="imageInput" type="file" accept="image/*" name="image"
          class="block w-full text-sm text-gray-700 border border-gray-300 rounded-lg cursor-pointer focus:outline-none focus:ring-2 focus:ring-red-500" />
        <!-- Preview -->
        <div class="mt-4">
          <img id="imagePreview" src="" alt="Image Preview"
            class="hidden w-full max-h-64 object-contain rounded-lg border border-gray-300" />
        </div>
      </div>

      <!-- Title -->
      <div>
        <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
        <input name="title" type="text" placeholder="Your pin title"
          class="mt-1 w-full rounded-lg border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500" />
      </div>

      <!-- Description -->
      <div>
        <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
        <textarea name="description" id="description" rows="3" placeholder="Describe your pin..."
          class="mt-1 w-full rounded-lg border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500"></textarea>
      </div>

      <!-- Link -->
      <div>
        <label for="link" class="block text-sm font-medium text-gray-700">Destination Link</label>
        <input name="link" id="link" type="url" placeholder="https://example.com"
          class="mt-1 w-full rounded-lg border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500" />
      </div>

      <!-- Buttons -->
      <div class="flex justify-end space-x-4">
        <a href="/web/users/feed" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
          Cancel
        </a>
        <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">
          Publish
        </button>
      </div>
    </form>
  </div>

  <script>
    const imageInput = document.getElementById('imageInput');
    const imagePreview = document.getElementById('imagePreview');

    imageInput.addEventListener('change', () => {
      const file = imageInput.files[0];
      if (file) {
        imagePreview.src = URL.createObjectURL(file);
        imagePreview.classList.remove('hidden');
      } else {
        imagePreview.src = '';
        imagePreview.classList.add('hidden');
      }
    });
  </script>
</body>

</html>